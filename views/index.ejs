<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chatting App</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h2>All chats </h2>
    <form method="get" action="/chats/new">
        <button>New Chat</button>
    </form>
    <br>
    <hr>
    <% for(let chat of chats) { %>
        <div class="chat">
            <p><i>From : <%= chat.from %></i></p>
            <div class="msg">
                <p><%= chat.msg %></p>
                <form method="get" action="/chats/<%= chat._id %>/edit">
                    <button>Edit</button>
                </form>
                <br>
                <form method="POST" action="/chats/<%= chat._id %>?_method=DELETE">
                    <button>Delete</button>
                </form>
            </div>
            <p><i> Received by <%= chat.to %></i></p>
            <hr>
            <p><%= chat.created_at.toString().split(" ")[4] %></p>
            <p><%= chat.created_at.toString().split(" ").slice(0,4).join(" ") %></p>
        </div>
        <br><br>
    <% } %>
</body>
</html>

